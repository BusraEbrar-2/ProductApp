<?xml version="1.0" encoding="utf-8"?>
<navigation

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/homeFragment" >

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.busra.productapp.ui.HomeFragment"
        android:label="Home"

        >
        <action
            android:id="@+id/action_homeFragment_to_productListFragment"
            app:destination= "@id/productListFragment" />

    </fragment>

    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.busra.productapp.ui.ProductDetailFragment"
        android:label="Product Detail">
        <argument
            android:name="selectedProduct"
            app:argType="com.busra.productapp.model.Product" />
</fragment>

    <fragment
        android:id="@+id/productListFragment"
        android:name="com.busra.productapp.ui.ProductListFragment"
        android:label="Product List" >
        <action
            android:id="@+id/action_productListFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />

        <action
            android:id="@+id/action_productListFragment_to_addProductFragment"
            app:destination="@id/addProductFragment" />


    </fragment>

    <fragment
        android:id="@+id/addProductFragment"
        android:name="com.busra.productapp.ui.AddProductFragment"
        android:label="Ürün Ekle" />


</navigation>
